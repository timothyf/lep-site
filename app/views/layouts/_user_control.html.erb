<% if !current_user %>
  <li class="nav-item">
    <a class="nav-link" href="<%= new_user_session_path %>">Login</a>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to current_user.email, user_path(current_user), :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => "nav-link" %>
  </li>
  <% if current_user.admin %>
    <%= link_to 'Admin', '/admin', :class => "nav-link" %>
  <% end %>
<% end %>
